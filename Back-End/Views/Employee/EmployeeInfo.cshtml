@model Back_End.Models.Employees

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
          integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>Ficha Personal de Empleados</title>

</head>

<body>

    <style>
        * {
            margin: 0;
            box-sizing: border-box;
            padding: 0;
        }

        section {
            border: 1px solid #ccc;
            margin: 20px;
        }


        .principal {
             display: -webkit-box; /* wkhtmltopdf uses this one */
            -webkit-box-pack: center; /* wkhtmltopdf uses this one */
        }

        .logo {
            border-bottom: 1px solid rgba(172, 161, 161, 0.501);
            border-right: 1px solid rgba(172, 161, 161, 0.501);
            height: 70px;
            -webkit-box-flex: 2;
            -webkit-flex: 2;
            flex: 2;
        }

        .fecha {
            border-bottom: 1px solid rgba(172, 161, 161, 0.501);
            border-left: 1px solid rgba(172, 161, 161, 0.501);
            height: 70px;
            -webkit-box-flex: 4;
            -webkit-flex: 4;
            flex: 4;
        }

        .titulo {
            width: 50%;
            border-bottom: 1px solid rgba(172, 161, 161, 0.501);
            height: 70px;
            -webkit-box-flex: 2;
            -webkit-flex: 2;
            flex: 2;
        }

            .titulo > h2 {
                font-size: 25px;
                text-transform: uppercase;
                margin: 0;
                line-height: 70px;
                text-align: center;
                vertical-align: middle;
            }


        .fecha p {
            margin: 2px 0 0 10px;
        }

        p {
            font-size: 12px;
            font-weight: 600;
        }

            p > span {
                font-size: 12px;
            }

        img {
            margin: 1px 0 0 8px;
            width: 173px;
        }

        .datos{
          display: -webkit-box;
          display: -webkit-flex;
          display: flex;
        }

        .datos > div{
             -webkit-box-flex: 1;
              -webkit-flex: 1;
              flex: 1;
              margin-right: 10%;
              background-color: yellow;
              border: 1px dashed black;
        }

        ..datos > div:last-child {
             margin-right: 0;
}

   
        .dataP {
            margin-top: 1.5rem;
/*            margin-left: 10px;
*/        }


        .dataIT {
            display: grid;
            grid-template-columns: 1fr 1fr 18%;
            grid-template-rows: 2rem, 2rem, 1rem 2rem 2rem;
            grid-template-rows: repeat(4, auto);
            flex: 2;
            margin-top: 1.5rem;
            grid-template-columns: 1fr 1fr 18% 1fr 1fr;
            grid-template-rows: repeat(4, auto);
        }

            .dataIT p:nth-child(4) {
                grid-row: span 3;
                grid-column: span 3;
            }

            .dataIT p:nth-child(5) {
                grid-column: 2 / 4;
                grid-row: 2 / 4;
            }


        .datos {
             display: -webkit-box; 
             -webkit-align-items: center;
        }

        .datosPersonales {
            padding: 1rem 1.5rem;
            border: 1px solid #ccc;
        }

        .data p {
            font-size: 15px;
        }

            .data p > span {
                font-size: 13px;
            }

    </style>

    <section>
        <div class="principal">

            <div class="logo">
                <img src="https://1.bp.blogspot.com/-6cW-1Sw9Hno/YRV4NpAW-fI/AAAAAAAAB28/W0fMEIj41C4NNq2v4xo9JOHbo4otpKKZQCLcBGAsYHQ/s0/Logo.png"
                     width="150">
            </div>

            <div class="titulo">
                <h2 class="text-center font-weight-bold">Reporte de empleados</h2>
            </div>

            <div class="fecha">
                <p>Versión: <span>01</span></p>
                <p>Aprobado: <span>Gerencia Gral</span></p>
                <p>Fecha: <span>30/05/2021</span></p>
            </div>
        </div>


        <div class="datosPersonales">
            <h6>Datos personales</h6>

            <div class="datos">
                <img src="https://blogger.googleusercontent.com/img/a/AVvXsEhUOA8HwyYFBnh7VnZxQwveTFGUwt6_dXazOIPRBmZuKrbMiPMC_cImvxRqYZepbi2npcWouLyiXG9IVarImm1NlgL8OX6PTg9qd8KmGjryq_ckdZJq3MmJudBFp6iB-drHF36baZa8UDMZJGgkusq90G79JNBdAAwvBfh0xhfKRchan_L30yQJZ70i">
             
                <div class="dataP">
                    <p>Nª de empleado: <span>@Model.EmployeeID</span></p>
                    <p>Empleado: <span>@Model.Users.Persons.FirstName @Model.Users.Persons.LastName</span></p>
                    <p>Documento: <span>@Model.Users.UserDni</span></p>
                </div>
                
                  <div class="dataP">
                    <p>Genero: <span>@Model.Users.Persons.Gender</span></p>
                    <p>Fecha de nacimiento: <span>@Model.Users.Persons.Birthdate</span></p>
                  </div>
            </div>


        </div>


        <div class="datosPersonales">
            <h6>Información de contacto</h6>

            <div class="datos">
                <div class="data" style="width:40%">
                    <p>Correo electronico: <span>@Model.Users.Persons.Email</span></p>
                    <p>Telefono de contacto: <span>@Model.Users.Persons.Phone</span></p>
                </div>

                <div class="data"  style="width:40%">
                    <p>Ciudad de residencia: <span>@Model.Users.Persons.LocationName</span></p>
                </div>

                <div class="data" style="width:50%">
                    <p>Domicilio: <span>@Model.Users.Persons.Address</span></p>
                </div>
            </div>
        </div>


        <div class="datosPersonales">
            <h6>Información de trabajo</h6>
            <div class="datos">
                <div class="dataIT">
                    <p>Cargo: <span>@Model.Users.Roles.RoleName</span></p>
                    <p>Dirección de tabajo y tipo: <span>@Model.Users.Estates.LocationAddress.Address @Model.Users.Estates.LocationAddress.NumberAddress - @Model.Users.Estates.EstateTypes</span></p>
                    <p>Ciudad: <span>@Model.Users.Estates.Locations.LocationCityName</span></p>
                </div>
            </div>
        </div>


        <div class="datosPersonales">
            <h6>Información de acceso</h6>
            <div class="datos">
                <div class="data">
                    <p>Disponibilidad ante emergencias: <span>@Model.Users.Persons.Status</span></p>
                    <p>Acceso al sistema: <span>@Model.Users.UserAvailability<span></p>
                    <p>Fecha de alta: <span>@Model.Users.Employees.EmployeeCreatedate</span></p>
                </div>
            </div>
        </div>

                    <p>Horarios laborales: </p>
                    @foreach (var item in Model.Users.Estates.EstatesTimes)
                    {
                        <p>@Html.DisplayFor(modelItem => item.Times.Schedules.ScheduleDate): <span>@Html.DisplayFor(modelItem => item.Times.StartTime) - @Html.DisplayFor(modelItem => item.Times.EndTime)</span></p>
                    }

                        <p>Telefono de la filial: <span>4875501</span></p>


    </section>
</body>

</html>